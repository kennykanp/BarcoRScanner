<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gv="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui;assembly=BarcodeScanner.Mobile.Maui"
             x:Class="ConFeMLKit8.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
           <gv:CameraView x:Name="cameraView"
                          HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" OnDetected="Camera_OnDetected"
                          TorchOn="False" VibrationOnDetected="True" ScanInterval="100"
                          />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
